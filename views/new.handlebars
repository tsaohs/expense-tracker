<div class="container-fluid w-50 mx-auto">
  <form method="POST" action="/record/new">
    <div class="mt-3 row">
      <label for="name" class="col-sm-2 col-form-label">名稱</label>
      <div class="col-sm-10">
        <input type="text" name="name" class="form-control" id="name" required=true placeholder="名稱">
      </div>
    </div>

    <div class="mt-3 row">
      <label for="date" class="col-sm-2 col-form-label">date</label>
      <div class="col-sm-10">
        <input type="date" name="date" class="form-control" id="date" required=true placeholder="date">
      </div>
    </div>
    <div class="mt-3 row">
      <label for="title" class="col-sm-2 col-form-label">類別</label>
      <div class="col-sm-10">
        <select class="form-control-sm col-8" placeholder="請選擇類別" name="categoryId" id="categoryId" required=true>
            <option selected>請選擇類別</option>
            {{#each categories}}
                <option value="{{this._id}}" {{#if this.selected}}selected{{/if}}>{{this.name}}</option>
            {{/each}}
        </select>
      </div>
    </div>

    <div class="mt-3 row">
      <label for="amount" class="col-sm-2 col-form-label">金額</label>
      <div class="col-sm-10">
        <div class="input-group">
          <span class="input-group-text">$</span>
          <input type="number" class="form-control" id="amount" name="amount" placeholder="請輸入金額" required=true>
        </div>
      </div>
    </div>
    <div class="d-flex mx-auto justify-content-end mt-3">
      <button type="submit" class="btn btn-primary me-3">新增支出</button>
      <a href="/" class="btn btn-primary">返回</a>
    </div>
  </form>
</div>